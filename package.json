{
  "name": "root",
  "private": true,
  "description": "Open Digital Education Frontend Library with ReactJS",
  "homepage": "https://github.com/opendigitaleducation/ode-react-ui#readme",
  "bugs": {
    "url": "https://github.com/opendigitaleducation/ode-react-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opendigitaleducation/ode-react-ui.git"
  },
  "license": "GPL-3.0",
  "author": "Open Digital Education",
  "workspaces": [
    "config",
    "storybook",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "npx lerna run build",
    "build:advanced": "npx lerna run build --scope=@ode-react-ui/advanced",
    "build:core": "npx lerna run build --scope=@ode-react-ui/core",
    "build:hooks": "npx lerna run build --scope=@ode-react-ui/hooks",
    "build:icons": "npx lerna run build --scope=@ode-react-ui/icons",
    "build:storybook": "npx lerna run build-storybook --scope=@ode-react-ui/storybook",
    "bump": "npx lerna version",
    "clean": "npx lerna clean && rm -rf node_modules",
    "graph": "npx nx graph",
    "lint": "npx lerna run lint",
    "lint:fix": "npx lerna run lint:fix",
    "prettier": "npx lerna run prettier",
    "storybook": "npx lerna run storybook --scope=@ode-react-ui/storybook"
  },
  "devDependencies": {
    "lerna": "5.5.2",
    "nx": "14.7.5"
  }
}
