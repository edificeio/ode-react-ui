{
  "name": "root",
  "private": true,
  "description": "Open Digital Education Frontend Library with ReactJS",
  "homepage": "https://github.com/opendigitaleducation/ode-react-ui#readme",
  "bugs": {
    "url": "https://github.com/opendigitaleducation/ode-react-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opendigitaleducation/ode-react-ui.git"
  },
  "license": "GPL-3.0",
  "author": "Open Digital Education",
  "workspaces": [
    "config",
    "storybook",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "build": "yarn lerna run build",
    "build:advanced": "yarn lerna run build --scope=@ode-react-ui/advanced",
    "build:core": "yarn lerna run build --scope=@ode-react-ui/core",
    "build:hooks": "yarn lerna run build --scope=@ode-react-ui/hooks",
    "build:icons": "yarn lerna run build --scope=@ode-react-ui/icons",
    "build:storybook": "yarn lerna run build-storybook --scope=@ode-react-ui/storybook",
    "bump": "yarn lerna version",
    "clean": "yarn lerna clean && rm -rf node_modules && rm -rf yarn.lock",
    "graph": "yarn nx graph",
    "lint": "yarn lerna run lint",
    "lint:fix": "yarn lerna run lint:fix",
    "prettier": "yarn lerna run prettier",
    "storybook": "yarn lerna run storybook --scope=@ode-react-ui/storybook"
  },
  "devDependencies": {
    "lerna": "5.5.2",
    "nx": "14.7.5"
  },
  "resolutions": {
    "**/remark-parse/trim": "0.0.3",
    "**/watchpack-chokidar2/chokidar": "3.5.1",
    "**/default-browser-id/meow": "8.0.0",
    "**/fast-glob/glob-parent": "5.1.2"
  }
}
