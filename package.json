{
  "name": "root",
  "private": true,
  "description": "Open Digital Education Frontend Library with ReactJS",
  "homepage": "https://github.com/opendigitaleducation/ode-react-ui#readme",
  "bugs": {
    "url": "https://github.com/opendigitaleducation/ode-react-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opendigitaleducation/ode-react-ui.git"
  },
  "license": "AGPL-3.0",
  "author": "Open Digital Education",
  "type": "module",
  "workspaces": [
    "packages/*",
    "docs",
    "template"
  ],
  "scripts": {
    "build": "turbo run build --filter=!@ode-react-ui/template",
    "check:components": "package-check --cwd=packages/components",
    "check:core": "package-check --cwd=packages/core",
    "check:hooks": "package-check --cwd=packages/hooks",
    "check:icons": "package-check --cwd=packages/icons",
    "clean": "rm -rf */**/node_modules && rm -rf node_modules && rm -f yarn.lock && rm -rf */**/dist",
    "docs": "storybook dev -p 6006",
    "docs:build": "storybook build --docs -o dist/ && cp -R packages/icons/assets/ dist/icons/",
    "docs:preview": "npx http-server ./dist",
    "fix": "turbo run fix --filter=!@ode-react-ui/template",
    "format": "turbo run format --filter=!@ode-react-ui/template",
    "postinstall": "yarn build",
    "lint": "turbo run lint --filter=!@ode-react-ui/template",
    "pre-commit": "yarn lint && yarn format",
    "prepare": "husky install",
    "publish-packages": "changeset version && changeset publish"
  },
  "dependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.1"
  },
  "devDependencies": {
    "@skypack/package-check": "0.2.2",
    "@storybook/addon-a11y": "7.0.18",
    "@storybook/addon-essentials": "7.0.18",
    "@storybook/addon-interactions": "7.0.18",
    "@storybook/addon-links": "7.0.18",
    "@storybook/blocks": "7.0.18",
    "@storybook/manager-api": "7.0.18",
    "@storybook/react": "7.0.18",
    "@storybook/react-vite": "7.0.18",
    "@storybook/testing-library": "0.1.0",
    "@storybook/theming": "7.0.18",
    "@turbo/gen": "1.10.1",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "@vitejs/plugin-react": "4.0.0",
    "eslint": "8.42.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.12",
    "husky": "8.0.3",
    "ode-ts-client": "feat-explorer",
    "prettier": "2.8.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup-plugin-visualizer": "5.9.0",
    "storybook": "7.0.18",
    "turbo": "1.10.1",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vite-plugin-dts": "2.3.0"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": "16.x"
  },
  "engineStrict": true
}
